{
    "name": "@task-tracker/server",
    "version": "1.0.0",
    "private": true,
    "description": "Task Tracker Backend - Express + TypeScript + MongoDB + Redis",
    "main": "dist/index.js",
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "lint": "eslint src --ext .ts",
        "test": "jest --passWithNoTests",
        "test:coverage": "jest --coverage --passWithNoTests",
        "clean": "rimraf dist coverage"
    },
    "dependencies": {
        "bcrypt": "^5.1.1",
        "cors": "^2.8.5",
        "dotenv": "^16.4.1",
        "express": "^4.18.2",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.1.1",
        "redis": "^4.6.12"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.11",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/node": "^20.11.5",
        "@types/supertest": "^6.0.2",
        "jest": "^29.7.0",
        "mongodb-memory-server": "^9.1.6",
        "rimraf": "^5.0.5",
        "supertest": "^6.3.4",
        "ts-jest": "^29.1.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.3"
    }
}